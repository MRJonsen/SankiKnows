<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.mine.mine.widget.MineAnswerActivity">

    <requestFocus />

    <com.zc.pickuplearn.ui.view.HeadView
        android:id="@+id/hv_team_list_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zc.pickuplearn.ui.view.SeachBar
        android:id="@+id/sb_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.youth.xframe.widget.loadingview.XLoadingView
            android:id="@+id/x_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.jdsjlzx.recyclerview.LRecyclerView
                android:id="@+id/lrv_list"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.youth.xframe.widget.loadingview.XLoadingView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
