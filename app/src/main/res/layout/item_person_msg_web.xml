<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    android:background="@color/divider_color"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_item_edit"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_width="40dp"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/cb_choice"
            android:button="@drawable/select_msg_checkbox"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v_msg"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginLeft="@dimen/margin_7dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:background="@drawable/circle" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_msg_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                 />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_msg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="在线考试"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2017-11-2"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_msg_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:text="什么啊"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="wuwuwu"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>