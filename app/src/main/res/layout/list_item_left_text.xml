<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/chatsystem_bg"
        android:gravity="center"
        android:textColor="#CCCCCC"
        android:textSize="13dip"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_margin="10dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/default_user_circle_icon" />

        <TextView
            android:id="@+id/btn_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:background="@drawable/chatfrom_bg_normal"
            android:gravity="center_vertical"
            android:autoLink="all"
            android:lineSpacingExtra="2dp"
            android:minHeight="50dp"
            android:textIsSelectable="true"
            android:text="1"
            android:textColor="#404040"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

</LinearLayout>