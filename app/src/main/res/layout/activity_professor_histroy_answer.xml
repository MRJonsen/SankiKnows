<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_professor_histroy_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zc.pickuplearn.ui.group.widget.prodetail.view.ProfessorHistroyAnswerActivity">
    <com.zc.pickuplearn.ui.view.HeadView
        android:id="@+id/hv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zc.pickuplearn.ui.view.SeachBar
        android:id="@+id/sb_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.youth.xframe.widget.loadingview.XLoadingView
        android:id="@+id/x_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lrc_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.youth.xframe.widget.loadingview.XLoadingView>

</LinearLayout>
