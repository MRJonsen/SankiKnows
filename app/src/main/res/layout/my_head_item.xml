<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_default_height"
    android:background="@drawable/main_page_bg_grad" >

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="@dimen/bar_default_height"
        android:layout_height="@dimen/bar_default_height"
        android:layout_alignParentLeft="true"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/iv_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <ImageButton
            android:id="@+id/ibt_right"
            android:background="@mipmap/ic_flower"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/padding_top"
            android:scaleType="centerCrop"
            android:visibility="invisible" />


        <Button
            android:id="@+id/bt_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <ImageButton
            android:id="@+id/ibt_collection"
            android:background="@mipmap/courseinfo_star"
            android:layout_toLeftOf="@id/bt_right"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/padding_top"
            android:scaleType="centerCrop"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>